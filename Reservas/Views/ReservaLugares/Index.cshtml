﻿@model IEnumerable<Reservas.Models.ReservaLugares>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Index";
}

<h2>Fazer reserva</h2>

<p>
    @Html.ActionLink("Nova Reserva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocalDaReserva)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDaReserva)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClienteFK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TecnicoFK)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>  
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalDaReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDaReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tecnico.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.ID }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>