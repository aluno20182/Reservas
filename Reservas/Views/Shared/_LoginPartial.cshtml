@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        @*Switch case para dizer olá Admin, olá tecnico, depndendo da conta que está logada*@
        @*<li>
            @Html.ActionLink("Olá " + User + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>*@
        <li class="nav-item">
            <a class="nav-link" href="../Manage" routeValues=null htmlAttributes=new { title="Manage" }>Meu Perfil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()" { id="loginLink" }>Sair</a>
        </li>
    </ul>
    }
}
else {
       //o utilizador nao está autenticado
<ul class="nav navbar-nav navbar-right">
    <li class="nav-item">
        <a class="nav-link" href="../Account/Register" routeValues=null htmlAttributes=new { id="registerLink" }>Registar</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="../Account/Login" routeValues=null htmlAttributes=new { id="loginLink" }>Entrar</a>
    </li>
    
</ul>
}
