@model Reservas.Models.ReservaLugar

@{
    ViewBag.Title = "Create";
}

<h2>Criar Reserva</h2>


@using (Html.BeginForm("Create",
                       "Reservas",
                       FormMethod.Post,
                       new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Reservas</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.LocalDaReserva, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LocalDaReserva, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LocalDaReserva, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DataDaReserva, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DataDaReserva, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.DataDaReserva, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LugarFK, "Lugar", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("LugarFK", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LugarFK, "", new { @class = "text-danger" })
        </div>
    </div>

    <input name="ClienteFK" value="@ViewBag.ClienteFK" class="btn btn-default" type="hidden" />


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Criar" class="btn btn-outline-dark" />
        </div>
    </div>
</div>
}

<div style="padding-left:inherit">
    @Html.ActionLink("Voltar", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
